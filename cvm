#!/bin/bash
showRunning() {
echo "[                   Running                    ]"
echo "================================================"

vboxmanage list runningvms | grep -o '"[^"]\+"' > .runningvms;

input=".runningvms"

while IFS= read -r line
do
  echo "$line ğŸ‘"
done < "$input"

}

showMenu(){
showRunning
echo "[              Was mÃ¶chten Sie tun             ]"
echo "================================================"
echo "1.)VM starten"
echo "2.)VM beenden"
echo "3.)Alle VM's anzeigen"
echo "================================================"
echo "4.)Arbeit VM's starten"
echo "5.)Arbeit VM's beenden"
echo "================================================"
read eingabe


if [ $eingabe == 1 ]
then 
	echo "Welche VM mÃ¶chten Sie starten?"
	VBoxManage list vms | grep -o '"[^"]\+"'
	read vmname
	VBoxManage startvm "$vmname" -type headless
	clear
	echo "VM wurde gestartet"
	sleep 2
  showMenu
elif [ $eingabe == 2 ]
then
	echo "Welche VM mÃ¶chten Sie beenden?"
	VBoxManage list runningvms | grep -o '"[^"]\+"'
	read vmname
	VBoxManage controlvm "$vmname" acpipowerbutton
	clear
	echo "VM wurde heruntergefahren"
  sleep 5
  showMenu
elif [ $eingabe == 3 ]
then
		VBoxManage list vms | grep -o '"[^"]\+"'
		sleep 5
		clear
		showMenu
elif [ $eingabe == 4 ]
then
	VBoxManage startvm "Live System Gerd Seitz" -type headless
	clear
	echo "Alle nÃ¶tigen VM's wurden gestartet ğŸ‘ï¸"
	sleep 2
	showMenu
elif [ $eingabe == 5 ]
then
	VBoxManage controlvm "Live System Gerd Seitz" acpipowerbutton
	clear
	echo "Alle nÃ¶tigen VM's wurden beendet ğŸ‘ï¸"
fi
}
showMenu